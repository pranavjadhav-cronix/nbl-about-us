{% if section.settings.heading != blank or section.settings.button_text != blank %}
  {% style %}
      .main-promo-bar-banner{
          background-color:{{ section.settings.background_color }};
      }
      .promo-banner-message{
          font-size:{{ section.settings.Promo_message_mobile_font_size }}px;  
          color:{{ section.settings.text_color }};
      } 
      .promo-bar-banner-button{
          font-size:{{ section.settings.Promo_button_mobile_font_size }}px;  
          color:{{ section.settings.text_color }}; 
      }

      @media screen and (min-width: 1280px) {
          .promo-banner-message{
              font-size:{{ section.settings.Promo_message_desktop_font_size }}px; 
          } 
          .promo-bar-banner-button{
              font-size:{{ section.settings.Promo_button_desktop_font_size }}px; 
          }
      }
  {% endstyle %}
  {{ 'promo-bar-banner.css' | asset_url | stylesheet_tag }}
  <div class="promo-bar-banner" role="banner" aria-label="Promotional banner">
      <div class="page-width">
          <div class="promo-banner-text-button">
          {% if section.settings.heading != blank %}
              <div class="promo-banner-message">
              {{ section.settings.heading }}
              </div>
          {% endif %}            
          {% if section.settings.button_link != blank and section.settings.button_text != blank %}
              <a href="{{ section.settings.button_link }}" class="promo-bar-banner-button link-with-icon" role="button" aria-label="{{ section.settings.button_text }}">
              {{ section.settings.button_text }}
              {%- render 'icon-right-custom' -%}
              </a>
          {% endif %}
          </div>
      </div>
  </div>

{% endif %}


{% schema %}
  {
    "name": "Promo bar banner",
    "tag": "section",
    "class": "main-promo-bar-banner",
    "settings": [
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "Shop Sale"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "header",
        "content": "Color settings"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#fff"
      },
      {
        "type": "header",
        "content": "Desktop"
      },
      {
        "type": "range",
        "id": "Promo_message_desktop_font_size",
        "max": 100,
        "min": 10,
        "default": 20,
        "unit": "px",
        "step": 2,
        "label": "Message font size"
      },
      {
        "type": "range",
        "id": "Promo_button_desktop_font_size",
        "max": 100,
        "min": 10,
        "default": 20,
        "unit": "px",
        "step": 2,
        "label": "Button font size"
      },
      {
        "type": "header",
        "content": "Mobile"
      },
      {
        "type": "range",
        "id": "Promo_message_mobile_font_size",
        "max": 100,
        "min": 10,
        "default": 20,
        "unit": "px",
        "step": 2,
        "label": "Message font size"
      },
      {
        "type": "range",
        "id": "Promo_button_mobile_font_size",
        "max": 100,
        "min": 10,
        "default": 20,
        "unit": "px",
        "step": 2,
        "label": "Button font size"
      }
    ],
    "presets": [
      {
        "name": "Promo bar banner"
      }
    ]
  }
  {% endschema %}
  