{{ 'section-featured-image.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="featured-images-section page-width color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="image-container">
    <div class="featured-image-item item-right">
      <div class="featured-image-text">
        {% if section.settings.description_1 %}
          <p>{{ section.settings.description_1 }}</p>
        {% endif %}
        {% if section.settings.heading_1 %}
          <h2>{{ section.settings.heading_1 }}</h2>
        {% endif %}
      </div>
      <div class="featured-image-photo">
        {% if section.settings.image_1 %}
          {{ section.settings.image_1 | image_url: width: 684 | image_tag }}
        {% endif %}
      </div>
    </div>
    <div class="featured-image-item item-left">
      <div class="featured-image-text">
        {% if section.settings.description_2 %}
          <p>{{ section.settings.description_2 }}</p>
        {% endif %}
        {% if section.settings.heading_2 %}
          <h2>{{ section.settings.heading_2 }}</h2>
        {% endif %}
      </div>
      <div class="featured-image-photo">
        {% if section.settings.image_2 %}
          {{ section.settings.image_2 | image_url: width: 684 | image_tag }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Images Section",
  "tag": "section",
  "class": "featured-image-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "description_1",
      "label": "Description for Image 1",
      "default": "[01] Lorem ipsum dolor sit amet Lorem ipsum stage copy length maximum sample."
    },
    {
      "type": "inline_richtext",
      "id": "heading_1", 
      "label": "Title for Image 1",
      "default": "Topic title Lorem ipsum dolor sit amet"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "description_2",
      "label": "Description for Image 2",
      "default": "[02] Lorem ipsum dolor sit amet Lorem ipsum stage copy length maximum sample."
    },
    {
      "type": "inline_richtext",
      "id": "heading_2",
      "label": "Title for Image 2",
      "default": "Topic title Lorem ipsum dolor sit amet"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_1",
      "label": "Color Scheme"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Featured Images Section"
    }
  ]
}
{% endschema %}