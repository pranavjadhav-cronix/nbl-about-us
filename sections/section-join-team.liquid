{{ 'section-join-team.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="join-team-section page-width color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="join-team-container">
    <div class="join-team-left">
      <div class="promo-text">
        {% if section.settings.promo_text %}
          <p>{{ section.settings.promo_text | newline_to_br }}</p>
        {% endif %}
      </div>
      <div class="content">
        {% if section.settings.heading %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading %}
          <p>{{ section.settings.subheading }}</p>
        {% endif %}
        {% if section.settings.button_text %}
          <a href="{{ section.settings.button_link }}" class="join-btn">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
    <div class="join-team-right">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 1200 | image_tag }}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Join Team Section",
  "tag": "section",
  "class": "join-team-section", 
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join Team NOBULL"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get exclusive discounts, first-looks at new products, family + friend benefits, and access to experiences only NOBULL can provide."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Join the Team"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "richtext",
      "id": "promo_text",
      "label": "Promotional Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_1",
      "label": "Color Scheme"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Join Team Section"
    }
  ]
}
{% endschema %}